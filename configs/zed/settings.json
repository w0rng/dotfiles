{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "base_keymap": "JetBrains",
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_fallbacks": ["FiraCode Nerd Font"],
  "buffer_font_weight": 300,
  "buffer_line_height": "standard",
  "current_line_highlight": "none",
  "gutter": {
    "folds": true,
    "code_actions": true,
    "line_numbers": false,
    "runnables": true
  },
  "ui_font_weight": 300,
  "ui_font_family": "FiraCode Nerd Font",
  "ui_font_size": 15,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "cursor_blink": true,
  "hour_format": "hour24",
  "preferred_line_length": 120,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "directoryFilters": ["-**/.git"],
        "gofumpt": true,
        "symbolScope": "workspace",
        "staticcheck": true,
        "templateExtensions": ["tmpl"],
        "experimentalPostfixCompletions": true,
        "analyses": {
          "nilness": true,
          "unusedparams": true,
          "unusedvariable": true,
          "unusedwrite": true,
          "useany": true
        },
        "codelenses": {
          "gc_details": true
        },
        "hints": {
          "assignVariableTypes": false,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": false
        }
      }
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 3000,
      "show_commit_summary": true
    }
  },
  "terminal": {
    "blinking": "on",
    "cursor_shape": "bar"
  },
  "scrollbar": {
    "show": "never"
  },
  "languages": {
    "Go": {
      "hard_tabs": true,
      "tab_size": 3,
      "language_servers": ["gopls", "golangci-lint"]
    }
  },
  "indent_guides": {
    "enabled": false
  },
  "project_panel": {
    "indent_guides": {
      "show": "never"
    },
    "git_status": true,
    "indent_size": 16
  },
  "outline_panel": {
    "indent_size": 16,
    "indent_guides": {
      "show": "never"
    }
  },
  "inlay_hints": {
    "enabled": true
  }
}
